# Local development (docker-compose.dev.yml)
# Copy to .env.dev and edit as needed.

# Host machine DB (Docker container -> local installed DB)
# Windows/macOS: host.docker.internal usually works as-is
# Linux: docker-compose.dev.yml maps host.docker.internal -> host-gateway
DB_HOST=host.docker.internal
DB_PORT=3306
DB_NAME=ifscm
DB_USER=app_user
DB_PASSWORD=change-me

# Spring backend (development policy)
JPA_DDL_AUTO=update
SPRING_PROFILES_ACTIVE=dev
APP_CORS_ALLOWED_ORIGINS=http://localhost:3000

# Python chat API (optional; only used with --profile ai)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4.1-mini
CHAT_RETENTION_DAYS=30
RATE_LIMIT_PER_MINUTE=20
