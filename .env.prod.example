# Production DB (AWS RDS MySQL). The compose `db` service is local/demo fallback only.
DB_HOST=your-rds-endpoint.rds.amazonaws.com
DB_PORT=3306
DB_NAME=ifscm
DB_USER=app_user
DB_PASSWORD=change-me

# Pin immutable image tags from CI
BACKEND_IMAGE=ghcr.io/natu-3/project_ifs-backend:sha-abcdef1
FRONTEND_IMAGE=ghcr.io/natu-3/project_ifs-frontend:sha-abcdef1
PYTHON_API_IMAGE=ghcr.io/natu-3/project_ifs-ai:sha-abcdef1

# Spring backend (production policy)
JPA_DDL_AUTO=validate
SPRING_PROFILES_ACTIVE=prod
APP_CORS_ALLOWED_ORIGINS=https://your-app.example.com

# Python chat API
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4.1-mini
CHAT_RETENTION_DAYS=30
RATE_LIMIT_PER_MINUTE=20
